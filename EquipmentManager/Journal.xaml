<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:EquipmentManagerVM;assembly=EquipmentManagerVM">
    <ControlTemplate x:Key="Journal">

        <ControlTemplate.Resources>
            <local:PositionComplexNameConverter x:Key="posComplexNameConverter" />
        </ControlTemplate.Resources>

        <TabControl HorizontalAlignment="Stretch" ItemsSource="{Binding Tabs}" SelectedIndex="0">

            <!--header-->
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Header}"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
            
            <!--content-->
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ListView ItemsSource="{Binding Content.View}">
                        <ListView.View>
                            <GridView>
                                <GridView.Columns>

                                    <GridViewColumn Header="Дата/время" 
                                                DisplayMemberBinding="{Binding DateTime, ConverterCulture=ru}">
                                    </GridViewColumn>

                                    <GridViewColumn Header="Позиция" 
                                                DisplayMemberBinding="{Binding Position.ComplexName, Converter={StaticResource posComplexNameConverter}}">
                                    </GridViewColumn>

                                    <GridViewColumn Header="Категория" 
                                                DisplayMemberBinding="{Binding EntryCategory.Title}">
                                    </GridViewColumn>

                                    <GridViewColumn Header="Описание" 
                                                DisplayMemberBinding="{Binding Description}">
                                    </GridViewColumn>

                                </GridView.Columns>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </DataTemplate>
            </TabControl.ContentTemplate>
            
        </TabControl>
        
    </ControlTemplate>

</ResourceDictionary>